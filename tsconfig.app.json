{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "vite-plugin-vue-layouts/client"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/views/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@dict/*": [
        "src/dict/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@user-fields/*": [
        "src/components/template/user_fields/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "xlsx.ts",
    "src/components/icons/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}